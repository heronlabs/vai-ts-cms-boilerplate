{
  "name": "@sandbox/api-cms",
  "version": "0.1.0",
  "description": "Project created to serve as a boilerplate for cms headless.",
  "license": "MIT",
  "scripts": {
    "build": "strapi build",
    "develop": "strapi develop",
    "docker:build": "docker build -t sandbox-cms-api:latest . -f Dockerfile",
    "docker:down": "docker-compose down --rmi all",
    "docker:up:api": "docker-compose up -d sandbox-cms-api --build --force-recreate",
    "docker:up:store": "docker-compose up -d sandbox-cms-store",
    "lint:check": "gts lint",
    "lint:fix": "gts fix",
    "start": "strapi start",
    "strapi": "strapi"
  },
  "prettier": "gts/.prettierrc.json",
  "eslintConfig": {
    "plugins": [
      "simple-import-sort"
    ],
    "extends": "./node_modules/gts/",
    "rules": {
      "max-classes-per-file": [
        "error",
        1
      ],
      "@typescript-eslint/no-duplicate-imports": "error",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "node/no-unpublished-import": 0,
      "simple-import-sort/exports": "error",
      "simple-import-sort/imports": "error"
    },
    "ignorePatterns": [
      "node_modules/",
      "dist/",
      "*.js"
    ]
  },
  "dependencies": {
    "@strapi/plugin-i18n": "4.11.1",
    "@strapi/plugin-users-permissions": "4.11.2",
    "@strapi/provider-email-nodemailer": "^4.11.3",
    "@strapi/provider-upload-aws-s3": "^4.6.1",
    "@strapi/strapi": "4.15.0",
    "pg": "8.8.0",
    "reflect-metadata": "^0.1.13",
    "strapi-plugin-populate-deep": "^3.0.0",
    "strapi-plugin-slugify": "2.3.5"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.38.0",
    "eslint": "^8.24.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "gts": "^4.0.0",
    "ts-node": "^10.9.1",
    "typescript": "4.8.4"
  },
  "engines": {
    "node": ">=18.x.x <=20.x.x",
    "npm": ">=6.0.0"
  }
}
